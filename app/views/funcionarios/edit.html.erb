<% provide(:title, "Atualizar Funcionário") %>
<h1>Atualizar Funcionário</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@funcionario) do |f| %>
      <%= f.label :"CPF" %>
      <%= f.text_field :cpf, class: 'form-control' %>

      <%= f.label :"Nome" %>
      <%= f.text_field :nome, class: 'form-control' %>

      <%= f.label :"Telefone" %>
      <%= f.text_field :telefone, class: 'form-control' %>

      <%= f.label :"Endereço" %>
      <%= f.text_field :endereco, class: 'form-control' %>

      <%= f.label :"Cargo" %>
      <%= f.text_field :cargo, class: 'form-control' %>

      <%= f.label :"Horário" %>
      <%= f.text_field :horario, class: 'form-control' %>

      <%= f.label :"Sexo" %>
      <%= f.text_field :sexo, class: 'form-control' %>

      <%= f.label :"Senha" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :"Confirmação de Senha" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Salvar Alterações", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
