<% provide(:title, 'Cadastro de Peças') %>
<h1>Cadastro de Peças</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@peca) do |f| %>
      <%= f.label :"Código" %>
      <%= f.text_field :codigo %>

      <%= f.label :"Nome" %>
      <%= f.text_field :nome %>

      <%= f.label :"Medida" %>
      <%= f.text_field :medida %>

      <%= f.label :"Tipo" %>
      <%= f.text_field :tipo %>

      <%= f.label :"Quantidade" %>
      <%= f.text_field :quantidade %>

      <%= f.label :"Modelo do Motor" %>
      <%= f.text_field :modeloMotor %>

      <%= f.submit "Cadastrar Peça", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
